@page "/"
@namespace augusto.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>augusto</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="augusto.styles.css" rel="stylesheet" />
</head>

<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="Js/Jquery.3.2.1.min.js"></script>
    <script src="Js/booststrap.budle.min.js"></script>
    <script src="Js/jquery.mask.min.js"></script>


    <script>
        function ShowTab(IdReferencia)
        {
            $('#' + IdReferencia).click();
        }
        function ShowModal(IdReferencia)
        {
            $('#' + IdReferencia).modal('show');
        }
        function HideModal(IdReferencia)
        {
            $('#' + IdReferencia).modal('hide');
        }
        function LoadPage()
        {
            $('.cpf').mask('000.000.000-00', {reverse: true});
            $('.cep').mask('00000-000');
            $('.phone_with_ddd').mask('(00) 0000-0000');
        }
    </script>
</body>

</html>
